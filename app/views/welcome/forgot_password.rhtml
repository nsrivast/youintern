<div id="LeftColumn" class="span-16" style="background-image:none;">
	<div class="user-form">

	<fieldset>
		<h3>Forgot Your Password?</h3>
		We'll email you a new one.<br /><br />
	
		<% form_tag '/welcome/forgot_student_password' do %>
			I'm a <b>student</b> and my email is: 
			<%= text_field_tag :email, params[:email] %>
		  	<%= submit_tag 'Email me a new password!' %>
		<% end %><br />
		
		<% form_tag '/welcome/forgot_employer_password' do %>
			I'm an <b>employer</b> and my email is: 
			<%= text_field_tag :email, params[:email] %>
		  	<%= submit_tag 'Email me a new password!' %>
		<% end %><br />
	</fieldset>

	</div>
</div>