<div class="user-form">
  <h3><span class="gray"></span> Edit Your Information</h3>
  <%= error_messages_for 'student' %>

  <fieldset>
  <legend>Personal Details</legend>

  <% form_for :student do |form| %>
	<table class="formData">
    <tr>
	  <td><label for="first_name">First name:</label></td>
	  <td><%= form.text_field :first_name, :size => 30, :value => @student.first_name %></td>
	</tr><tr>
	  <td><label for="last_name">Last name:</label></td>
	  <td><%= form.text_field :last_name, :size => 30, :value => @student.last_name %></td>
	</tr><tr>
	  <td><label for="email">Email:</label></td>
	  <td><%= form.text_field :email, :size => 30, :value => @student.email %></td>
	</tr>
    <tr>
	  <td><label for="location">Location:</label></td>
	  <td><%= form.text_field :location, :size => 30, :value => @student.location %> (City, State)<br />
		  <label for="location">ZIP:</label> <%= form.text_field :location_zip, :size => 40, :value => @student.location_zip %></td>
		<tr>
	  <td><label for="location">Desired Internship Location:</label></td>
	  <td><%= form.text_field :desired_location, :size => 30, :value => @student.desired_location %></td>
	</tr><tr>
	  <td><label for="location">ZIP:</label></td>
	  <td><%= form.text_field :desired_location_zip, :size => 40, :value => @student.desired_location_zip %></td>
	</tr>
    <tr>
	  <td><label for="about_me">About you:</label></td>
	  <td><%= form.text_area :about_me, :size => "200x5", :value => @student.about_me %></td>
	</tr><tr>
	  <td><label for="interested_in">Interested in:</label></td>
	  <td><%= form.text_area :interested_in, :size => "200x5", :value => @student.interested_in %></td>
	</tr><tr>
	  <td><label for="skills">Skills:</label></td>
	  <td><%= form.text_area :skills, :size => "200x5", :value => @student.skills %></td>
	</tr>
    </table>

	<%= submit_tag "Update Info", :class => 'submit' %>

  <% end %>
  </fieldset>
</div>